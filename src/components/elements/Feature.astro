---
import Translate from 'components/localization/Translate.astro'
import Image from 'components/elements/Image.astro'

interface Props {
  title: string
  description: string
  image: string
}

const { title, description, image } = Astro.props as props
---

<div class="feature">
	<div class="icon-wrapper flex">
		<Image src={image} alt={title} style={{"padding": "0.8rem"}}/>
	</div>
	<h3 class="title"><Translate key={title} /></h3>
	<p class="description">
	<Translate key={description} />
</div>

<style lang="scss">
.feature {
	.icon-wrapper {
		width: 4.375rem;
		height: 4.375rem;
		justify-content: center;
		align-items: center;
		border-radius: 0.625rem;
		margin-bottom: 1.5rem;
		background-color: var(--color-primary);

		img {

		}
	}
	.title {
		font-size: var(--size-h4);
		font-weight: var(--weight-medium);
		margin-bottom: 0.625rem;
	}
	.description {
		color: var(--color-text-primary);
	}
}
</style>
